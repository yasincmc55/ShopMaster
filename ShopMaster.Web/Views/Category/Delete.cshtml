@model Category

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-8 col-sm-12">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center rounded-top-4">
                    <h4 class="mb-0">Delete Category</h4>
                </div>
                <!--asp-validation-summary="All" ModelOnly ve None de var-->
                <div class="mt-3" style="color:orangered" asp-validation-summary="All"></div>
                <div class="card-body p-4">
                    <form asp-action="Delete" method="post">
                        <!--hidden-->
                        <input asp-for="Id" hidden/>
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" placeholder="Enter category name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DisplayOrder" class="form-label"></label>
                            <input asp-for="DisplayOrder" class="form-control" placeholder="Enter display order" />
                            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-controller="Category" asp-action="Delete" class="btn btn-outline-secondary w-45">
                                Back to List
                            </a>
                            <button type="submit" class="btn btn-danger w-45">
                                Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!--
    burada jquery üzerinden client-side kısmında validation yapıyoruz
    sayfa yenilemeye gerek kalmadan input alanlarında hatalar bastırılıyor
    burada model sınıfındaki required alanları dikkate alınarak işlemler yapılır
    karşılamadığı işlemler için ise ayrı bir script kullanmak gerekir
-->
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}