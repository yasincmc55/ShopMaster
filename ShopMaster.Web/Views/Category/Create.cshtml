@model Category

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-8 col-sm-12">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center rounded-top-4">
                    <h4 class="mb-0">Create Category</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" placeholder="Enter category name" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DisplayOrder" class="form-label"></label>
                            <input asp-for="DisplayOrder" class="form-control" placeholder="Enter display order" />
                            <span asp-validation-for="DisplayOrder" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary w-45">
                                Back to List
                            </a>
                            <button type="submit" class="btn btn-primary w-45">
                                Create
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
